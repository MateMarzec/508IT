@model EventsPlusApp.ViewModels.Booking

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center lightfont">Events</h1>

<p class="lightfont">
    <a asp-action="Create">Create New</a>
</p>
<table class="table lightfont">
    <thead>
        <tr>
            <th>
                Title
            </th>
            <th>
                Type
            </th>
            <th>
                Date and Time
            </th>
            <th>
                Location
            </th>
            <th>
                Manager
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Events)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateAndTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Manager.FirstName)
            </td>
                <td>
                    <a asp-action="Index" asp-route-id="@item.ID">Select</a>
                    <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> 
                    <a asp-action="Details" asp-route-id="@item.ID">Details</a> 
                    <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                </td>
        </tr>
        }
    </tbody>
</table>
@if (Model.Participants != null)
{
<h1 class="lightfont">The participants of the event</h1>

<table class="table lightfont">
    <thead>
        <tr>
            <th>
                First Name
            </th>
            <th>
                Last Name
            </th>
            <th>
                Phone Number
            </th>
            <th>
                Event
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Participants)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Event.Title)
            </td>
            <td>
            </td>
        </tr>
        }
    </tbody>
</table>
}
