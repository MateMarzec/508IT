@model EventsPlusApp.Models.Booking

@{
    ViewData["Title"] = "Delete";
}

<h1 class="lightfont">Delete</h1>

<h3 class="lightfont">Are you sure you want to delete this?</h3>
<div>
    <h4 class="lightfont">Booking</h4>
    <hr />
    <dl class="row lightfont">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Participant)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Participant.FirstName)
        </dd class>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Event)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Event.Title)
        </dd class>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ParticipantID" />
        <input type="hidden" asp-for="EventID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="lightfont">Back to List</a>
    </form>
</div>
