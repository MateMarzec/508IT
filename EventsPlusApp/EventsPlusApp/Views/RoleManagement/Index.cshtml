@model List<Microsoft.AspNetCore.Identity.IdentityUser>
@{ ViewData["Title"] = "Index"; }
<h1 class="text-center lightfont">Role Management</h1>
<hr />
<div class="container">
    <a asp-action="AddUserToRole" class="btn btn-info mr-2">Assign user to role</a>
    <div class="row">
        <div class="col-12">
            @if (Model.Count == 0)
            {<p>No users</p> }
            else
            {
                <table class="table lightfont">
                    <thead>
                        <tr><th>UserName</th><th>Actions</th></tr>
                    </thead>
                    <tbody>
                        @foreach (var u in Model)
                        {
                            <tr>
                                <td>@u.UserName</td>
                                <td><a class="btn btn-info" asp-route-userId="@u.Id" asp-action="Details">View Details</a>    </td>
                            </tr>
}
                    </tbody>
                </table>}
        </div>
    </div>
</div>
