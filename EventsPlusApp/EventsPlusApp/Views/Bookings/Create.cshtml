@model EventsPlusApp.Models.Booking

@{
    ViewData["Title"] = "Create";
}

<h1 class="lightfont">Create</h1>

<h4 class="lightfont">Booking</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group lightfont">
                <label asp-for="ParticipantID" class="control-label"></label>
                <select asp-for="ParticipantID" class ="form-control" asp-items="ViewBag.ParticipantID"></select>
            </div>
            <div class="form-group lightfont">
                <label asp-for="EventID" class="control-label"></label>
                <select asp-for="EventID" class ="form-control" asp-items="ViewBag.EventID"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="lightfont">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
